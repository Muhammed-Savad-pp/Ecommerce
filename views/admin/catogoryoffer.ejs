                    <header class="card-header">
                        <div class="row align-items-center">
                            
                            <div class="col-md-3 col-12 me-auto mb-md-0 mb-3" style="width: 70px;">
                                <select class="form-select">
                                    <option selected>All category</option>
                                    <option>Electronics</option>
                                    <option>Clothes</option>
                                    <option>Automobile</option>
                                </select>
                            </div>
                            
                            <div class="col-md-2 col-6">
                                <select class="form-select">
                                    <option selected>Status</option>
                                    <option>Active</option>
                                    <option>Disabled</option>
                                    <option>Show all</option>
                                </select>
                            </div>
                        </div>
                    </header>
                    
                    
                        
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr style="background-color: #306450; color: white;">
                                            <th>Sl.No</th>
                                            <th>Category</th>
                                            <th>Discount(%)</th>
                                            <th>ExpiryDate</th>
                                            <th>Activation</th>
                                            <th>ACTION</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    
                                        <% categoryOffer.forEach((cat, ind) =>{ %>

                                            <tr>

                                                <td><%= ind+1 %></td>
                                                <td><%= cat.categoryId.name %></td>
                                                <td><%= cat.offer %></td>
                                                <td><%= cat.validity.toLocaleDateString('en-US', { day: 'numeric' , month: 'short' ,year: 'numeric' }) %></td>
                                                <td><% if(cat.activation == true ){ %>

                                                    <button onclick="diactive('<%= cat._id %>')" style="background-color: rgb(212, 215, 46); color: white; border: none; height: 25px;" >Active</button>

                                                    <% } else { %>

                                                        <button onclick="active('<%= cat._id %>')" style="background-color:red; color: white; border: none; height: 25px;" >DiActive</button>

                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/admin/editCategoryOffer?id=<%= cat._id %>"><button  style="background-color: green; color: white; border: none; height: 25px; margin-right: 10px;" >Edit</button></a>
                                                    <button onclick="delet('<%= cat._id %>')" style="background-color: red; color: white; border: none; height: 25px;" >Delete</button>
                                                </td>
                                            </tr>

                                        <% }) %>


                                       

                                    </tbody>

                                </table>
                                
                                
