        <script>

                    // delect
            function delet(id){

                Swal.fire({
                    title: `Are you sure?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: `Yes`

                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/admin/deleteCategoryOffer', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                id:id
                            })
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    window.location.reload();
                                }
                            })

                    }
                })

            }
       

            // diactive 

            function diactive(id){
            Swal.fire({
                    title: `Diactive this offer`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: `Yes`

                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/admin/CategoryOfferdiActive', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                id:id
                            })
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    window.location.reload();
                                }
                            })

                    }
                })
        }
       

            // active
       

            function active(id){
            Swal.fire({
                    title: `Active this offer`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: `Yes`

                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/admin/CategoryOfferActive', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                id:id
                            })
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    window.location.reload();
                                }
                            })

                    }
                })
        }
       
       </script>

      
