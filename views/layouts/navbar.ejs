<style id="dynamic-style">
  .main_menu .cart i::after {
    position: absolute;
    border-radius: 50%;
    background-color: #f13d80;
    width: 14px;
    height: 14px;
    right: -8px;
    top: -8px;
    content: attr(data-count);
    text-align: center;
    line-height: 15px;
    font-size: 10px;
    color: #fff;
  }

  .main_menu .wishilist i::after {
    position: absolute;
    border-radius: 50%;
    background-color: #f13d80;
