        <script>

            document.addEventListener('DOMContentLoaded', () => {
                const checkboxes = document.querySelectorAll('input[type="checkbox"][name="sort"]');

                checkboxes.forEach(checkbox => {
                    checkbox.addEventListener('change', (event) => {
                        if (event.target.checked) {
                            window.location.href = `/shop?sortvalue=${event.target.value}`
                            
                        } else {
                            console.log(`Deselected value: ${event.target.value}`);

                        }


                        checkboxes.forEach(box => {
                            if (box !== event.target) {
                                box.checked = false;
                            }
                        });
                    });
                });
            });
        </script>

