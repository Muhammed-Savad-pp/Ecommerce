                                        <p>PinCode</p>
                                        <input type="text" placeholder="Enter PinCode" name="pincode" id="pincode"
                                            value="<%= address.pincode %>">
                                        <p id="pincodeError" style="color: red;"></p>
                                    </div>
                                </div>

                                <div style="margin-left: 180px; margin-top: 10px;">
                                    <button type="button"
                                        style="border: none; background-color: red; color: white; height: 30px;"
                                        onclick="editaddress('<%= address._id %>')">Submit</button>
                                </div>
