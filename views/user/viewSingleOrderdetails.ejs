        <style>
            body {
                margin-top: 80px;
                color: #1a202c;
                text-align: left;
                background-color: #ecfdff;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .center {
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .center-div {
                width: 80%;
                height: 100%;
                background-color: white;
                margin-top: 90px;
                position: relative;
                /* Needed for the absolute positioning of the button */
            }

            .first-div {
                margin-top: 25px;
                margin-left: 20px;
            }

            .second-div {
                margin-left: 55px;
                margin-top: 25px;
            }

            .third-div {
                margin-left: 75px;
                margin-top: 25px;
            }

            .top-div {
                margin-top: 20px;
            }

            .prode {
                height: 100%;
                margin-left: 30px;
                margin-right: 10px;
            }

            /* Modal styles */
            /* Your modal styles */
            .modal {
                display: none;
                position: fixed;
                z-index: 999;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                overflow: auto;
                background-color: rgba(0, 0, 0, 0.5);
            }

            .modal-content {
                position: absolute;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
                background-color: #fff;
                padding: 20px;
                max-width: 50%;
                max-height: 80%;
                overflow: auto;
            }

            .close {
                position: absolute;
                top: 10px;
                right: 20px;
                font-size: 28px;
                cursor: pointer;
            }

            .returnClose {
                position: absolute;
                top: 10px;
                right: 20px;
                font-size: 28px;
                cursor: pointer;
            }

            /* Style the button inside the modal */
            .modal-content button {
                padding: 10px 20px;
                background-color: #007bff;
                color: #fff;
                border: none;
                cursor: pointer;
            }

            /* Close button hover effect */
            .modal-content button:hover {
                background-color: #0056b3;
            }

            /* Position the PDF button in the top right corner */
            .pdf-button-container {
                position: absolute;
                top: 10px;
                right: 10px;
            }

            .pdf-button-container button {
                padding: 10px 20px;
                background-color: #007bff;
                color: #fff;
                border: none;
                cursor: pointer;
                font-size: 16px;
            }

            .pdf-button-container button:hover {
                background-color: #0056b3;
            }
        </style>

        <div class="center-div">

          

