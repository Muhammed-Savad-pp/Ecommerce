<%- include("../layouts/header.ejs") %>
    <%- include("../layouts/navbar.ejs") %>

        <style>
            body {
                margin-top: 80px;
                color: #1a202c;
                text-align: left;
                background-color: #ecfdff;
            }

            .main-body {
                padding: 15px;
            }

            .card {
                box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
            }

            .card {
                position: relative;
                display: flex;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 0 solid rgba(0, 0, 0, .125);
                border-radius: .25rem;
            }

            .card-body {
                flex: 1 1 auto;
                min-height: 1px;
                padding: 1rem;
            }

            .gutters-sm {
                margin-right: -8px;
                margin-left: -8px;
            }

            .gutters-sm>.col,
            .gutters-sm>[class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

            .mb-3,
            .my-3 {
                margin-bottom: 1rem !important;
            }

            .bg-gray-300 {
                background-color: #e2e8f0;
            }

            .h-100 {
                height: 100% !important;
            }

            .shadow-none {
                box-shadow: none !important;
            }

            .buttons {
                width: 100%;
                height: 40px;
                border: none;
                background-color: rgb(228, 54, 54);
                color: white;
                border: 2px;
                border-radius: 5px;
                margin-top: 10px;
            }

            .genric-btn {
                height: 40px;
                margin-left: 33px;
                width: 140px;
                border: none;
                background-color: rgb(235, 57, 57);
                color: white;
                border: 2px;
                border-radius: 5px;
            }

            .ap {
                font-size: 20px;

            }

            
        </style>




        <div class="container">
            <div class="main-body">
                <div class="row gutters-sm">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                        class="rounded-circle" width="150">
                                    <div class="mt-3">
                                        <h4>
                                            <%= userdata.name %>
                                        </h4>
                                        <br>
                                        <br>
                                        <a href="/userprofile"><button class="buttons"><i style="margin-right: 7px;"
                                                class="fa-solid fa-user"></i>Account Details</button></a>
                                        <a href="/orderDetails"><button class="buttons"><i style="margin-right: 7px;"
                                                class="fas fa-cart-plus"></i>Orders</button></a>
                                        <a href="/userAddress"><button style="background-color:  rgb(94, 120, 206);" class="buttons"><i style="margin-right: 7px;"
                                                    class="fa-solid fa-address-book"></i>Address</button></a>
                                        <button class="buttons"><i style="margin-right: 7px;"
                                                class="fa-solid fa-wallet"></i>Wallet</button>
                                        <button class="buttons"><i style="margin-right: 7px;"
                                                class="fa-solid fa-ticket"></i>Coupons</button>
                                        <a href="/userlogout"><button class="buttons"><i style="margin-right: 7px;"
                                                class="fa-solid fa-right-from-bracket"></i>Logout</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="col-md-8 ">
                        <div style="margin-left: 540px;">
                            <a href="/addAddress"><button class="genric-btn">Add Address</button></a>

                        </div>

                        <div style="margin-top: 20px;" class="row ">
                            <% if(addressData && addressData.address && addressData.address.length> 0){ %>
                                <% for(let i=0; i < addressData.address.length; i++){ %>

                                    <div class="col-md-6 mb-3 justify-content-center  ">
                                        <div class="card  ">
                                            <div class="card-body">
                                                <h2 style="color: rgb(174, 37, 37);">Address <%= i+1 %>
                                                </h2>
                                                <span class="ap">
                                                    <%=addressData.address[i].name %>
                                                </span>
                                                <br>
                                                <span class="ap">
                                                    <%=addressData.address[i].city %>
                                                </span>
                                                <br>
                                                <span class="ap">
                                                    <%=addressData.address[i].district %>
                                                </span>
                                                <br>
                                                <span class="ap">
                                                    <%=addressData.address[i].state %>
                                                </span>
                                                <br>
                                                <span class="ap">
                                                    <%=addressData.address[i].country %>
                                                </span>
                                                <br>
                                                <span class="ap">
                                                    <%=addressData.address[i].pincode %>
                                                </span>
                                                <br>
                                                <span class="ap">
                                                    <%=addressData.address[i].mobile %>
                                                </span>
                                                <br>
                                                <br>

                                                <a href="/editaddress?id=<%= addressData.address[i]._id  %>"><button
                                                    style="border: none; color: white; background-color: rgb(77, 201, 77);"
                                                    >Edit
                                                </button></a>
                                                
                                                <button onclick="delecte('<%=addressData.address[i]._id %>')"
                                                    style="border: none; color: white; background-color: red;">Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>

                        </div>

                    </div>


                </div>

            </div>
        </div>

        


        <script src="/js/script.js"></script>

        <script>

           




            // delect address
            function delecte(id) {


                Swal.fire({
                    title: `Are you sure?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: `Yes`

                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch(`/delecteaddress?id=${id}`)
                        .then(respone => respone.json())
                        .then(data => {

                                if (data.success) {

                                    window.location.reload()
                                    //$('#main-id').load('/userAddress #main-id' )
                                }
                        })
                        .catch(error =>{
                            console.log('fecth error',error);
                        })
                    }
                })
            }

        </script>
        <%- include("../layouts/footer.ejs") %>