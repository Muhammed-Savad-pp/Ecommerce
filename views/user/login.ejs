<%- include("../layouts/header.ejs")  %>
<%- include("../layouts/navbar.ejs") %>

<section class="px-100" style="background-color: #ecfdff;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10" style="margin-top: 50px;">
          <div class="card" style="border-radius: 1rem;">
            <div class="row g-0">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img src="/assets/loginpage1.jpg"
                  alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; width: 100%; height: 100%;" />
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black" >
  
                  <form action="login" method="post">
  
                    <div class="d-flex align-items-center mb-3 pb-1">
                      <!-- <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i> -->
                      <span class="h1 fw-bold mb-0 text-success" >Zakio.</span>
                    </div>
  
                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                    <%
                        if(typeof message !== 'undefined'){
                      %>
                          <p style="color: red;"><%= message %></p>
                      <%    
                        }
                    %>
  
                    <div class="form-outline mb-4">
                      <input type="email" name="email" id="form2Example17" class="form-control form-control-lg" />
                      <label class="form-label" for="form2Example17">Email address</label>
                    </div>
  
                    <div class="form-outline mb-4">
                      <input type="password" name="password" id="form2Example27" class="form-control form-control-lg" />
                      <label class="form-label" for="form2Example27">Password</label>
                    </div>

                    <a class="small text-muted" href="/forgotPassord">Forgot password?</a>
  
                    <div class="pt-1 mb-4" >
                      <button class="genric-btn success-border circle"  type="submit">Login</button>
                    </div>

                    <div class="pt-1 mb-4 d-grid gap-3" >
                        <a href="/auth/google"><button class="btn btn-sm btn-block" style=" background-color: rgb(208, 29, 29); font-size: 14px; color: white;" type="button"><i class="fa-brands fa-google"></i> </span>SIGN IN WITH GOOGLE</button></a>
                        <a href="/auth/facebook"><button class="btn  btn-sm btn-block" style=" margin-top: 5px; background-color: rgb(15, 8, 214); font-size: 14px; color: white;" type="button"><i class="fa-brands fa-facebook"></i></i> </span>SIGN IN WITH FACEBOOK</button></a>

                    </div>


  
                   
                    
                    <p class="mb-3 pb-lg-2" style="color: #393f81;">Don't have an account? <a href="/register"
                        style="color: #393f81;">Register here</a></p>
                    <a href="#!" class="small text-muted">Terms of use.</a>
                    <a href="#!" class="small text-muted">Privacy policy</a>
                  </form>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>



<%- include("../layouts/footer.ejs")  %>