                                                <% coupenData.forEach(cou=>{ %>
                                                    <% if(cou.is_active==true){ %>
                                                        <p style="margin-bottom: 5px; margin-left: 10px;"> You Get <span
                                                                style="color: red; font-size: 18px; font-weight: 400;">
                                                                <%= cou.discount %>%
                                                            </span>,
                                                            Coupen Code : <span
                                                                style="font-size: 18px; color:red; font-weight: 400;">
                                                                <%= cou.coupenCode %>
                                                            </span> </p>
                                                        <% } %>
                                                            <% }) %>
                                                                <% } %>
