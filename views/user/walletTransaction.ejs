<%- include("../layouts/header.ejs") %>
    <%- include("../layouts/navbar.ejs") %>

        <style>
            body {
                margin-top: 80px;
                color: #1a202c;
                text-align: left;
                background-color: #ecfdff;
            }

            .main-body {
                padding: 15px;
            }

            .card {
                box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
            }

            .card {
                position: relative;
                display: flex;
                flex-direction: column;
                min-width: 0;
                word-wrap: break-word;
                background-color: #fff;
                background-clip: border-box;
                border: 0 solid rgba(0, 0, 0, .125);
                border-radius: .25rem;
            }

            .card-body {
                flex: 1 1 auto;
                min-height: 100px;
                padding: 1rem;
            }

            .gutters-sm {
                margin-right: -8px;
                margin-left: -8px;
            }

            .gutters-sm>.col,
            .gutters-sm>[class*=col-] {
                padding-right: 8px;
                padding-left: 8px;
            }

            .mb-3,
            .my-3 {
                margin-bottom: 1rem !important;
            }

            .bg-gray-300 {
                background-color: #e2e8f0;
            }

            .h-100 {
                height: 100% !important;
            }

            .shadow-none {
                box-shadow: none !important;
            }

            .buttons {
                width: 100%;
                height: 40px;
                border: none;
                background-color: rgb(228, 54, 54);
                color: white;
                border: 2px;
                border-radius: 5px;
                margin-top: 10px;
            }

            /* breadcrums */

            .breadcrumbs {
                margin-top: 20px;
                padding: 10px;
                background-color: #f8f9fa;
                border-radius: 5px;
                font-size: 16px;
            }

            .breadcrumbs ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

            .breadcrumbs li {
                display: inline;
            }

            .breadcrumbs li:not(:last-child):after {
                content: ' / ';
                margin: 0 5px;
            }

            .breadcrumbs a {
                text-decoration: none;
                color: #007bff;
            }

            .breadcrumbs a:hover {
                text-decoration: underline;
                color: #0056b3;
            }


        </style>



        <div class="container">
            <div class="main-body">


                <!-- <div class="breadcrumbs">
                    <ul>
                        <li><a href="/home">Home</a></li>
                        <li>User Profile</li>
                        
                    </ul>
                </div> -->


                <div class="row gutters-sm" style="margin-top: 50px;">
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin"
                                        class="rounded-circle" width="150">
                                        <div class="mt-3">
                                            <h4>
                                                <%= userdata.name %>
                                            </h4>
                                            <br>
                                            <br>
                                            <a href="/userprofile"><button class="buttons"><i style="margin-right: 7px;"
                                                        class="fa-solid fa-user"></i>Account Details</button></a>
                                            <a href="/orderDetails"><button class="buttons" ><i
                                                    style="margin-right: 7px;" class="fas fa-cart-plus"></i>Orders</button></a>
                                            <a href="/userAddress"><button class="buttons"><i style="margin-right: 7px;"
                                                        class="fa-solid fa-address-book"></i>Address</button></a>
                                            <a href="/wallet"><button class="buttons" style="background-color: rgb(94, 120, 206);"><i style="margin-right: 7px;"
                                                    class="fa-solid fa-wallet"></i>Wallet</button></a>
                                            <a href="/userlogout"><button class="buttons"><i style="margin-right: 7px;"
                                                        class="fa-solid fa-right-from-bracket"></i>Logout</button></a>
                                        </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-8">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="row">
                                    <h4 style="margin-left: 30px;">Your Transaction</h4>
                                    <% if(wallet != null){ %>
                                    <p style="font-weight: 400; margin-left: 250px;"><i class="fa-solid fa-wallet"></i> Wallet Balance: â‚¹ <span><%= wallet.balance %></span></p>

                                

                               
                                </div>
                                <!-- Adding border to the div with "ada" content -->
                                <div class="container" style="border: 1px solid rgb(147, 146, 146); padding: 10px; margin-top: 10px;">
                                    <% wallet.history.reverse().forEach(tra =>{ %>
                                        <div class="row" style="margin-left: 10px; margin-bottom: 0rem; height: 30px;">
                                            <p style="font-size: 18px; font-weight: 500;"><%= tra.transactionType %></p>
                                            <% if(tra.transactionType =='debit'){ %>
                                                <p style="margin-left: 550px; font-size: 17px; font-weight: 500; color: red;">-<%= tra.amount %></p>
                                            <% }else { %>
                                                <p style="margin-left: 550px; font-size: 17px; font-weight: 500; color: green;">+<%= tra.amount %></p>
                                            <% } %>
                                            
                                        </div>
                                        <p style="margin-left: 10px; font-weight: 300; "><%= tra.date.toLocaleString('en-US', {
                                            day: 'numeric',
                                            month: 'short',
                                            year: 'numeric',
                                            hour: 'numeric',
                                            minute: 'numeric',
                                            second: 'numeric'
                                        }) %></p>
                                        <hr>

                                    <% }) %>
                                    <% } else { %>
                                        
                                        <h5 style="margin-top: 70px; color: red;">No Transation</h5>
                                   <% } %>
                                    
                                </div>
                            </div>
                            
                        </div>

                    </div>
                </div>

            </div>
        </div>
        <script src='https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js'></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
       

        <%- include("../layouts/footer.ejs") %>